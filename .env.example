# PostgreSQL MCP Server Environment Variables (for Coolify deployment)

# REQUIRED: API Key for authentication
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MCP_API_KEY=your-secure-api-key-here

# REQUIRED: Enable write operations (INSERT, UPDATE, DELETE, CREATE, DROP)
ENABLE_WRITES=true

# OPTIONAL: Comma-separated allowed origins for CORS
ALLOWED_ORIGINS=https://kiro.dev,https://dependifyllc.com

# OPTIONAL: Server port (default: 3000)
PORT=3000
